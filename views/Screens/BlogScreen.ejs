<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Load-Static-Global-Assets -->
    <%- include("../Components/base.ejs"); %>

    <!-- Load-Static-Local-assets -->
    <link rel="stylesheet" href="assets/css/discover.css">
    <link rel="stylesheet" href="assets/css/blog.css">
</head>
<body>
    <!-- MainHeader -->
     <%- include("../Headers/GlobalNavbar.ejs"); %>
    <!-- */MainHeader -->
    
    <!-- AppBody -->
    <main> 
          <!-- NinethBanner -->
          <div class="NinethBanner minBanner contentBanner mt-1 py-4 d-flex flex-column justify-content-center align-items-center"> 
            <div class="banner-container container-fluid col-md-11 py-5 my-3">
                 <div class="banner-content col-lg-12 mx-auto">
                 <div class="row">

                    <!-- Banner -->
                    <div class="content-bx col-lg-8 mx-auto col-md-12">
                             <div class="header">
                                <h1 class="display-5 fw-bold text-body-emphasis lh-1 mb-2">Blog Articles</h1>
                                <p class="lead fw-medium fs-6 tc-darker-light">Latest blog post, articles and tutorials on agriculture in africa...</fieldset>.</p>
                             </div>
                             <div class="blog-articles my-4">

                              <div class="col-md-12 my-3 blog-item">
                                <div class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
                                  <div class="col-lg-auto col-md-12 d-lg-block img-bx">
                                    <img loading="lazy" class="bd-placeholder-img" height="100%" src="assets/gallery/boys-with-corns.jpg" role="img" preserveAspectRatio="xMidYMid slice">
                                  </div>
                                  <div class="col p-4 d-flex flex-column position-static"> 
                                    <h3 class="mb-0 tc-darker-dark fw-semibold">Featured post</h3>
                                    <div class="mb-1 tc-darker opacity-50">Nov 12</div>
                                    <p class="card-text mb-auto fw-medium fs-6 tc-darker-light">
                                      This is a wider card with supporting text below as a natural lead-in to additional content...</p>
                                    <a href="#" class="gap-2 mt-3 icon-link-hover stretched-link link-active d-flex align-items-center">
                                      <span>Continue reading</span>
                                      <span class="bi bi-chevron-right"></span>
                                    </a>
                                  </div> 
                                </div>
                              </div>

                              <div class="col-md-12 my-3 blog-item">
                                <div class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
                                  <div class="col-lg-auto col-md-12 d-lg-block img-bx">
                                    <img loading="lazy" class="bd-placeholder-img" width="100%" height="100%" src="assets/gallery/boys-with-corns.jpg" role="img" preserveAspectRatio="xMidYMid slice">
                                  </div>
                                  <div class="col p-4 d-flex flex-column position-static"> 
                                    <h3 class="mb-0 tc-darker-dark fw-semibold">Featured post</h3>
                                    <div class="mb-1 tc-darker opacity-50">Nov 12</div>
                                    <p class="card-text mb-auto fw-medium fs-6 tc-darker-light">
                                      This is a wider card with supporting text below as a natural lead-in to additional content...</p>
                                    <a href="#" class="gap-2 mt-3 icon-link-hover stretched-link link-active d-flex align-items-center">
                                      <span>Continue reading</span>
                                      <span class="bi bi-chevron-right"></span>
                                    </a>
                                  </div> 
                                </div>
                              </div>  

                             </div>
                             <div class="divider border border-top-3 border-start-0 border-end-0 border-bottom-0 mt-5 mb-4">

                             </div>
                             <div class="btn-group">
                              <button type="button" class="btn btn-sm btn-light border border-1"><span class="bi bi-arrow-left me-2"></span> View previous</button>
                              <button type="button" class="btn btn-sm bg-success-subtle border border-1">More <span class="bi bi-arrow-right ms-2"></span></button>
                            </div>
                    </div>
                    <!-- /*Banner -->

                    <!-- SideBanner --> 
                    <div class="sidebar-bx col-lg-4 mx-auto col-md-12"> 
                            <div class="position-sticky" style="top: 2rem;"> 
                              <div class="mt-5">
                                <h4 class="fw-semibold fs-4 tc-darker">Recent posts</h4>
                                <ul class="list-unstyled"> 
                                  <li>
                                    <a class="d-flex flex-column flex-lg-row gap-3 align-items-start align-items-lg-center py-3 link-body-emphasis text-decoration-none border-top" href="#">
                                      <div class="sm-img-container rounded rounded-2 mx-auto">
                                        <img loading="lazy" class="bd-placeholder-img" src="assets/gallery/boys-with-corns.jpg">
                                       </div>
                                      <div class="col-lg-8">
                                        <h6 class="mb-0">Example blog post title</h6>
                                        <small class="text-body-secondary">January 15, 2023</small>
                                      </div>
                                    </a>
                                  </li>
                                </ul>
                              </div>
                    </div>
                    <!-- SidethBanner -->

                </div>
                 </div>
            </div>  
          </div> 
          <!-- /**NinethBanner --> 

    </main>
